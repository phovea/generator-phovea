{
  "logging": {
    "version": 1,
    "formatters": {
      "simple": {
        "format": "%(asctime)s %(levelname)s %(name)s: %(message)s",
        "datefmt": "%H:%M:%S"
      },
      "line": {
        "format": "%(asctime)s %(levelname)s %(name)s(%(pathname)s:%(lineno)s): %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "phovea_server.TimedRotatingFileHandler",
        "level": "DEBUG",
        "formatter": "line",
        "filename": "logs/<%-name %>.log",
        "when": "midnight",
        "backupCount": 7
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "file"
      ]
    }
  }
}
